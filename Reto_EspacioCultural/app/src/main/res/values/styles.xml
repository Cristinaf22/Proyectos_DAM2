<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#AA081B</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="appText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#040316</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textSizeToFill">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#040316</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="buttonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="startTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">#AA081B</item>
        <item name="android:textSize">45sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="listEvent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">#040316</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="checkboxText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#040316</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="textViewToFill" parent="textSizeToFill">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
